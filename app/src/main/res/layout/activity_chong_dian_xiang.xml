<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chong_dian_xiang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F8FC"
    android:orientation="vertical"
    tools:context="com.SearchXiangQing.ChongDianXiang">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cd_xiangqing_back"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/ic_navi_back_dark" />

        <TextView
            android:id="@+id/cd_number"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="车牌号"
            android:layout_marginRight="30dp"
            android:textSize="18dp"

            />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="160dp"
            >

            <ImageView
                android:id="@+id/cd_im"
                android:layout_width="100dp"
                android:background="#FFF"
                android:layout_gravity="center"
                android:layout_height="100dp"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_height="30dp"
                android:background="#fff"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电费"
                    />

                <TextView
                    android:id="@+id/dianfei_qian"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="yuan"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#fff"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务费"
                    />
                <TextView
                    android:id="@+id/fuwu_qian"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="yuan"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="选择充电口"
                    android:id="@+id/textView" />


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/cdimageview1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/select_cd"
                        android:button="@null"
                        />

                    <RadioButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/select_cd2"
                        android:button="@null"
                        android:layout_marginLeft="60dp"
                        android:id="@+id/cdimageView2" />

                    <RadioButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/select_cd"
                        android:button="@null"
                        android:layout_marginLeft="60dp"
                        android:id="@+id/cdimageView3" />

                    <RadioButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/select_cd2"
                        android:button="@null"
                        android:layout_marginLeft="60dp"
                        android:id="@+id/cdimageView4" />
                </RadioGroup>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/cd_z1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="左1 32A"
                        />
                    <TextView
                        android:id="@+id/cd_z2"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="左2 16A"
                        />
                    <TextView
                        android:id="@+id/cd_y1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="右1 32A"
                        />
                    <TextView
                        android:id="@+id/cd_y2"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="右2 16A"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#C8CFD6"
                android:gravity="center"
                android:text="提示"
                />
            <TextView
                android:id="@+id/cd_ts1"
                android:layout_weight="1"
                android:textColor="#C8CFD6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="1"
                />
            <TextView
                android:id="@+id/cd_ts2"
                android:layout_weight="1"
                android:textColor="#C8CFD6"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="2"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#24BAFF"
                android:text="3.查看该商家协议"
                />
            <Button
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="预约"
                android:layout_marginTop="35dp"
                android:textColor="#ffffff"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center"
                android:background="@drawable/shapesemo2"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
