<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_youhuiquan_shi_yong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zl.cn.jer.easycar.activity.myyikai.YouhuiquanShiYongActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/user_home_youhuiquan_shiyong_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_navi_back_dark"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="优惠券使用规则"
                android:gravity="center"
                android:textSize="18sp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
        <WebView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/yajin_wb"
            android:layout_marginBottom="10dp"
            ></WebView>
    </LinearLayout>
</RelativeLayout>
