<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iv_info_window_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_info"
            android:layout_width="20dp"
            android:layout_marginTop="5dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/iv_home_zu" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/name_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="北京易开租车贷点（暂不开放）ahdkasdjflkjsdflsd"
                android:textSize="18sp"
                android:singleLine="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/distance_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距离21.96km"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/rentable_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2可租"
                    android:textColor="@android:color/holo_blue_light"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/address_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市朝阳区八里庄东里1号莱锦文化创意产业园"
                android:textSize="14sp"
                android:textColor="#cbcfd6"
                />

            <TextView
                android:id="@+id/time_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="营业：00：00-23：59"
                android:textSize="14sp"
                android:textColor="#cbcfd6"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/daohang_info"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="导航"
            android:textColor="#24BAFF"
            android:background="@drawable/shapecircle"
            />

        <Button
            android:id="@+id/yuyue_info"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:textColor="@android:color/white"
            android:background="@drawable/shapecircle2"
            android:text="预约"/>
    </LinearLayout>

</LinearLayout>
